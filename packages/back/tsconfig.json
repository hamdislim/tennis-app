{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
   // "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./built",
    "rootDir": "src",
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules**/*",
    "./**/*.spec.*",
    "./**/*.test.*",
    "./**/*.stories.*"
  ]
}
